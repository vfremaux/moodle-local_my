


<!-- local_my/coursebox -->
<div class="local-my-promowrap">
    <div class="local-my-fp-coursebox {{hiddenclass}} {{selfenrolclass}} {{guestenrolclass}}">
        <div class="local-my-fp-coursethumb">
            <div class="local-my-fp-courseinfo {{withopacityeffect}} {{withhaloeffect}}">
                <h3>
                    <a href="{{{courseurl}}}" data-toggle="tooltip" data-placement="bottom">
                        <img aria-hidden="true" src="{{{imgurl}}}">
                        <div class="coursetitle">{{trimtitle}}</div>
                        <div class="course-overlay">
                            <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
                        </div>
                     </a>
                </h3>
            </div>
            <div class="local-my-fp-summary">{{{summary}}}</div>

            <div class="attributes-container">
                <div class="local-my-fp-learning-indicators">
                    {{#hasprogression}}
                    <div class="local-my-fp-progression">
                        {{{progression}}}
                    </div>
                    {{/hasprogression}}
                    {{> local_my/assignments_to_submit}}
                    {{> local_my/quiz_to_perform}}
                </div>
                {{#hasattributes}}
                <div class="local-my-fp-attributes">
                    {{{hiddenattribute}}}
                    {{{selfattribute}}}
                    {{{guestattribute}}}
                    {{{futureattribute}}}
                    {{{editingattribute}}}
                </div>
                {{/hasattributes}}
            </div>

        </div>

    </div>

</div>
<!-- /local_my/coursebox -->