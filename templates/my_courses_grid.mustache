

<!-- local_my/my_courses_grid -->

{{#debuginfo}}
<pre>
{{debuginfo}}
</pre>
{{/debuginfo}}

<div class="block block_my_courses">

    <div class="header">
        <div class=title">
            <h2>{{mycoursesstr}}</h2>
        </div>
    </div>

    <div class="content course-grid">

{{^hascourses}}
        {{{nocourses}}}
{{/hascourses}}

{{#hascourses}}
    {{#coursegridelms}}
        <div class="local-my-promowrap">
            <div class="local-my-fp-coursebox {{hiddenclass}} {{selfenrolclass}} {{guestenrolclass}}">
                <div class="local-my-fp-coursethumb">
                    <div class="local-my-fp-courseinfo {{withopacityeffect}} {{withhaloeffect}}">
                        <h3>
                            <a href="{{{courseurl}}}"
                               data-toggle="tooltip"
                               data-placement="bottom"><img src="{{{imgurl}}}" width="100%" height="125" alt="">
                               <div class="coursetitle">{{trimtitle}}</div></a>
                        </h3>
                    </div>
                    <div class="local-my-fp-summary">{{{summary}}}</div>
                    {{#hasattributes}}
                    <div class="attributes-container">
                        <div class="local-my-fp-attributes">
                            {{{hiddenattribute}}}
                            {{{selfattribute}}}
                            {{{guestattribute}}}
                            {{{futureattribute}}}
                            {{{editingattribute}}}
                        </div>
                    </div>
                    {{/hasattributes}}
                </div>

            </div>
            {{#progression}}
            <div class="local-my-fp-progression">
                {{{progression}}}
            </div>
            {{/progression}}
        </div>
    {{/coursegridelms}}
{{/hascourses}}
    </div>
</div>
<!-- local_my/my_courses_grid -->
